<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionbBar</item>
        <!-- <item name="android:actionMenuTextColor">@color/menu_textcolor_selector</item> -->
    </style>

    <style name="AppTheme.ActionbBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:subtitleTextStyle">@style/AppTheme.ActionBar.subtitleTextStyle</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="AppTheme.ActionBar.subtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textColor">@color/subtitle_text</item>
    </style>
    
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MainActivityTheme.ActionbBar</item>
    </style>

    <style name="MainActivityTheme.ActionbBar" parent="AppTheme.ActionbBar">
        <item name="android:displayOptions">showHome|showTitle</item>
    </style>
    
    <style name="MainActivityTheme1" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/MainActivityTheme.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MainActivityTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/MainActivityTheme.ActionBar.TabView</item>
    </style>

    <style name="MainActivityTheme.ActionBar" parent="AppTheme.ActionbBar">
        <item name="android:backgroundStacked">@color/main_activity_theme_background_stacked</item>
        <item name="android:displayOptions">showHome|showTitle</item>
    </style>
    
    <style name="MainActivityTheme.ActionBar.TabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:showDividers">none</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="MainActivityTheme.ActionBar.TabBar" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerPadding">16dp</item>
        <item name="android:background">@drawable/tab_background</item>
    </style>

</resources>
